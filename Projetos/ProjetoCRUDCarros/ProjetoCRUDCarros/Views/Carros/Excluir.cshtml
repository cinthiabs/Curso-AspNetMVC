@model ProjetoCRUDCarros.Models.Carro
@{
    ViewData["Title"] = "Excluir";
}

<h2>Detalhes</h2>
<div class="row">
    <!--mostrando as informaçções-->
    <p><strong>Marca:</strong>  @Html.DisplayFor(model => model.Marca) </p>
    <p><strong>Nome:</strong> @Html.DisplayFor(model => model.Nome) </p>
    <p><strong>Ano:</strong> @Html.DisplayFor(model => model.Ano) </p>
</div>

<form asp-action="Excluir">

    <input type="hidden" asp-for="CarroId" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
</form>

<br />
<a asp-action="Index" class="btn btn-primary">Voltar</a>
