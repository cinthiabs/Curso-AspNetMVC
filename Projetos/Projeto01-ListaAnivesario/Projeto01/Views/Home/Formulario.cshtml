<!--Inserindo o arquivo da model-->

@{
    @model Projeto01.Models.RespostaConvidados


    ViewData["Title"] = "Formulario";
}

<h2>Formulario</h2>
<hr />

<div>

    <form asp-action="Formulario" method="POST">
        <div>
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" />
        </div>

        <div>
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" />
        </div>

        <div>
            <label asp-for="Telefone">Telefone:</label>
            <input asp-for="Telefone" />
        </div>

        <div>
            <label>Vou estar presente?</label>
            <select asp-for="Presente">
                <option value="">Escolha uma opção</option>
                <option value="true">Sim</option>
                <option value="false">Não</option>
            </select>
        </div>
        <div>
            <button type="submit">Enviar</button>
        </div>
    </form>
</div>
