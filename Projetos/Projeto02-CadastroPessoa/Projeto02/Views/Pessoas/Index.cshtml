@model IEnumerable<Projeto02.Models.Pessoa>

@{
    ViewData["Title"] = "Criar Cadastro";
}


<p>
    <a asp-action="CriarPessoa" class="btn btn-primary">Criar Cadastro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="AtualizarPessoa" asp-route-id="@item.PessoaId"class="btn btn-primary">Atualizar</a> |
                <a asp-action="ExcluirPessoa" asp-route-id="@item.PessoaId" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
